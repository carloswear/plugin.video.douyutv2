<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.douyutv2"
    name="斗鱼TV(douyutv)"
    version="1.0.2"
    provider-name="Yangqian">
    <requires>
        <import addon="script.module.beautifulsoup"/>
        <import addon="script.module.requests" version="1.1.0"/>
    </requires>
    <extension
        point="xbmc.python.pluginsource"
        library="addon.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">douyu video plugin</summary>
        <summary lang="zh">斗鱼TV插件</summary>
        <description lang="en">Online video from www.douyutv.com. Video quality and source can be changed under settings</description>
        <description lang="zh">斗鱼TV. 图像质量和源可以在设置里面改变</description>
        <platform>all</platform>
    </extension>
</addon>
